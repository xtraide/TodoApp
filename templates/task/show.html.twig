{% extends 'base.html.twig' %}

{% block title %}Détails de la tâche{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="card-title">Détails de la tâche</h1>

                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ task.id }}</td>
                        </tr>
                        <tr>
                            <th>Titre</th>
                            <td>{{ task.title }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ task.description ?: 'Aucune description' }}</td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>
                                {% if task.status %}
                                    <span class="badge bg-success">Terminée</span>
                                {% else %}
                                    <span class="badge bg-warning">À faire</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Créée le</th>
                            <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_task_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>

                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                </div>

                <div class="mt-3">
                    {{ include('task/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
